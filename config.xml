<!-- Config file for the engine -->
<config>
  <engine>
    <title>My platformer game</title>
    <maxFrameDuration value="16"/>
  </engine>

  <render>
    <vsync value="false"/>
  </render>

  <window>
    <resolution width="1280" height="720" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

<scene>
	<map path="Assets/New tile map/" name="Map.tmx"/>
	<entities>
	<player x="100" y="0" w="32" h ="32" texture="Assets/Textures/spritesheet.png">
		<animations>
				<idle loop="true" speed ="0.05">
					<frame x="0" y="0" w="32" h="32"/>
					<frame x="32" y="0" w="32" h="32"/>
				</idle>
				<jumpingright loop="true" speed ="0.1">
					<frame x="0" y="64" w="32" h="32"/>
					<frame x="32" y="64" w="32" h="32"/>
					<frame x="64" y="64" w="32" h="32"/>
					<frame x="96" y="64" w="32" h="32"/>
					<frame x="128" y="64" w="32" h="32"/>
					<frame x="160" y="64" w="32" h="32"/>
					<frame x="192" y="64" w="32" h="32"/>
					<frame x="224" y="64" w="32" h="32"/>
				</jumpingright>
			<jumpingleft loop="true" speed ="0.1">
				<frame x="0" y="128" w="32" h="32"/>
				<frame x="32" y="128" w="32" h="32"/>
				<frame x="64" y="128" w="32" h="32"/>
				<frame x="96" y="128" w="32" h="32"/>
				<frame x="128" y="128" w="32" h="32"/>
				<frame x="160" y="128" w="32" h="32"/>
				<frame x="192" y="128" w="32" h="32"/>
				<frame x="224" y="128" w="32" h="32"/>
			</jumpingleft>
				<walkingright loop="true" speed ="0.1">
					<frame x="0" y="32" w="32" h="32"/>
					<frame x="32" y="32" w="32" h="32"/>
					<frame x="64" y="32" w="32" h="32"/>
					<frame x="96" y="32" w="32" h="32"/>
				</walkingright>
			</animations>
		</player>
	</entities>
</scene>

</config>